@model AnimeApp.Models.Anime
@{
    ViewData["Title"] = "Delete Anime";
}

<div>
    <h4 style="text-align:center; margin-top:30px">Are you sure you want to delete this anime?</h4>
    <h2 style="text-align:center">@Model.Title</h2>
    <div class="d-flex justify-content-center">
        <a class="btn btn-primary" style="margin-right:50px" asp-controller="Admin" asp-action="DeleteConfirmed" asp-route-animeID="@Model.AnimeId">Delete</a>
        <a class="btn btn-secondary" asp-controller="Animes" asp-action="Index">Back to List</a>
    </div>
</div>
